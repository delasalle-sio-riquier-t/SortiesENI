{% extends 'layout/LayoutBloc.html.twig' %}

{% block title %}Accueil - SortiesENI{% endblock %}

{% block site %}<a class="navbar-brand" href="#">SortiesENI</a>{% endblock %}


{% block main %}
    <p>Date du jour : {{ "now"|date("m/d/Y") }}</p><br>
    <p>Participant : {{ app.user.username }}</p><br>
    <div style="display: flex; justify-content: flex-end">
                <select class="form-select form-select-sm" aria-label=".form-select-sm example">
                    {# {% for etat in etats %}
                        <option>{{ etat.libelle }}</option>
                    {% endfor %}#}
                </select>
                <a type="button" href="{{ path('index') }}" class="btn btn-primary" role="button">Appliquer</a>
        {{ form_start(filtreForm) }}
            {{ form_row(filtreForm.etats) }}
            <button type="submit" class="btn btn-primary">Appliquer</button>
        {{ form_end(filtreForm) }}
    </div>
    <table class="table table-dark">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nom</th>
            <th scope="col">Date de début de sortie</th>
            <th scope="col">Durée de la sortie</th>
            <th scope="col">Date fin d'inscriptions</th>
            <th scope="col">Nombre de participants max</th>
            <th scope="col">Infos</th>
        </tr>
        </thead>
        <tbody>
        {% for sortie in sorties %}
            <tr>
                <th scope="row">{{ sortie.id }}</th>
                <td>{{ sortie.nom }}</td>
                <td>{{ sortie.datedebut|date("m/d/Y") }}</td>
                <td>{{ sortie.duree }}</td>
                <td>{{ sortie.limitInscription|date("m/d/Y") }}</td>
                <td>{{ sortie.nbInscriptionMax }}</td>
                <td>{{ sortie.infoSortie }}</td>
            </tr>
        {%  endfor %}
        </tbody>
    </table>
{% endblock %}